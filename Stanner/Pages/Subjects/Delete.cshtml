@page
@model Stanner.Pages.Subjects.DeleteModel
@{
    ViewData["Title"] = "Delete Subject";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1 class="text-danger">Delete Subject</h1>
            <hr />
            
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Warning!</strong> Are you sure you want to delete this subject? 
                This will also delete all associated notes (@Model.Subject.Notes.Count) and flashcards (@Model.Subject.Flashcards.Count).
            </div>
            
            <div class="card">
                <div class="card-body">
                    <h3>@Model.Subject.Name</h3>
                    
                    @if (!string.IsNullOrEmpty(Model.Subject.Description))
                    {
                        <p class="text-muted">@Model.Subject.Description</p>
                    }
                    
                    <dl class="row">
                        <dt class="col-sm-3">Current Grade</dt>
                        <dd class="col-sm-9">@Model.Subject.CurrentGrade</dd>
                        
                        <dt class="col-sm-3">Target Grade</dt>
                        <dd class="col-sm-9">@Model.Subject.TargetGrade</dd>
                        
                        <dt class="col-sm-3">Notes</dt>
                        <dd class="col-sm-9">@Model.Subject.Notes.Count</dd>
                        
                        <dt class="col-sm-3">Flashcards</dt>
                        <dd class="col-sm-9">@Model.Subject.Flashcards.Count</dd>
                    </dl>
                </div>
            </div>
            
            <form method="post" class="mt-3">
                <input type="hidden" asp-for="Subject.Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Subject
                </button>
                <a asp-page="/Portal" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>