@page
@model Stanner.Pages.Subjects.EditModel
@{
    ViewData["Title"] = "Edit Subject";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1>Edit Subject</h1>
            <hr />
            
            <form method="post">
                <input type="hidden" asp-for="Subject.Id" />
                <input type="hidden" asp-for="Subject.UserId" />
                <input type="hidden" asp-for="Subject.CreatedAt" />
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="Subject.Name" class="form-label">Subject Name</label>
                    <input asp-for="Subject.Name" class="form-control" />
                    <span asp-validation-for="Subject.Name" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Subject.Description" class="form-label">Description</label>
                    <textarea asp-for="Subject.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Subject.Description" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Subject.CurrentGrade" class="form-label">Current Grade</label>
                        <input asp-for="Subject.CurrentGrade" class="form-control" />
                        <span asp-validation-for="Subject.CurrentGrade" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="Subject.TargetGrade" class="form-label">Target Grade</label>
                        <input asp-for="Subject.TargetGrade" class="form-control" />
                        <span asp-validation-for="Subject.TargetGrade" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Subject.Color" class="form-label">Color Theme</label>
                    <input asp-for="Subject.Color" type="color" class="form-control form-control-color" />
                    <span asp-validation-for="Subject.Color" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-page="/Portal" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}