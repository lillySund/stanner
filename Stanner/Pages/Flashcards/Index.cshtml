@page
@model Stanner.Pages.Flashcards.IndexModel
@{
    ViewData["Title"] = "Flashcards";
}

<div class="container flashcards-container">
    <div class="page-header">
        <div>
            <h1><i class="bi bi-card-list"></i> Flashcards</h1>
            @if (Model.Subject != null)
            {
                <p class="text-muted">Subject: <strong>@Model.Subject.Name</strong></p>
            }
        </div>
        <div class="header-actions">
            <a asp-page="./Create" asp-route-subjectId="@Model.Subject?.Id" 
               class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Flashcard
            </a>
            @if (Model.Flashcards.Any())
            {
                <a asp-page="./Study" asp-route-subjectId="@Model.Subject?.Id" 
                   class="btn btn-success">
                    <i class="bi bi-lightning-fill"></i> Study this
                </a>
            }
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Flashcards.Any())
    {
        <div class="flashcards-stats mb-4">
            <div class="stat-item">
                <i class="bi bi-card-checklist"></i>
                <span>Total: <strong>@Model.Flashcards.Count</strong></span>
            </div>
            <div class="stat-item">
                <i class="bi bi-graph-up"></i>
                <span>You have sstudied: <strong>@Model.Flashcards.Count(f => f.TimesStudied > 0)</strong></span>
            </div>
        </div>

        <div class="flashcards-grid">
            @foreach (var flashcard in Model.Flashcards)
            {
                <div class="flashcard-item">
                    <div class="flashcard-header">
                        <span class="badge bg-primary">Studied @flashcard.TimesStudied times</span>
                        @if (flashcard.LastStudied.HasValue)
                        {
                            <small class="text-muted">Last: @flashcard.LastStudied.Value.ToLocalTime().ToString("g")</small>
                        }
                    </div>
                    <div class="flashcard-content">
                        <div class="question-section">
                            <h6><i class="bi bi-question-circle-fill text-primary"></i> Question:</h6>
                            <p>@flashcard.Question</p>
                        </div>
                        <div class="answer-section">
                            <h6><i class="bi bi-check-circle-fill text-success"></i> answer:</h6>
                            <p>@flashcard.Answer</p>
                        </div>
                    </div>
                    <div class="flashcard-footer">
                        <small class="text-muted">
                            Created: @flashcard.CreatedAt.ToLocalTime().ToString("g")
                        </small>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@flashcard.Id" 
                              asp-route-subjectId="@Model.Subject?.Id"
                              onsubmit="return confirm('Do you want to delete this flashcard?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-card-text" style="font-size: 4rem; color: #ccc;"></i>
            <h3>No flashcards yet</h3>
            <p class="text-muted">Create your first flashcard to start studying them</p>
            <a asp-page="./Create" asp-route-subjectId="@Model.Subject?.Id" 
               class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Create First Flashcard
            </a>
        </div>
    }

    <div class="mt-4">
        <a asp-page="/Portal" class="btn btn-secondary">
            <i class="bi bi-house"></i> Back to Portal
        </a>
    </div>
</div>

@section Styles {
    <style>
        .flashcards-container {
            padding: 2rem 0;
            max-width: 1200px;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .header-actions {
            display: flex;
            gap: 0.5rem;
        }

        .flashcards-stats {
            display: flex;
            gap: 2rem;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .flashcards-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 1.5rem;
        }

        .flashcard-item {
            background: white;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            padding: 1.5rem;
            transition: all 0.3s;
        }

        .flashcard-item:hover {
            border-color: #667eea;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.2);
            transform: translateY(-2px);
        }

        .flashcard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .flashcard-content {
            margin: 1rem 0;
        }

        .question-section, .answer-section {
            margin-bottom: 1rem;
            padding: 0.75rem;
            background: #f8f9fa;
            border-radius: 6px;
        }

        .question-section h6, .answer-section h6 {
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .question-section p, .answer-section p {
            margin: 0;
            color: #333;
        }

        .flashcard-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #e0e0e0;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
        }

        .empty-state h3 {
            margin: 1rem 0;
            color: #666;
        }
    </style>
}