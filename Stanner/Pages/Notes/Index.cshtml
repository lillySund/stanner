@page
@model Stanner.Pages.Notes.IndexModel
@{
    ViewData["Title"] = $"Notes - {Model.Subject.Name}";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>@Model.Subject.Name - Notes</h1>
            <p class="text-muted">@Model.Notes.Count note(s)</p>
        </div>
        <div>
            <a asp-page="/Notes/Create" asp-route-subjectId="@Model.Subject.Id" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Note
            </a>
            <a asp-page="/Portal" class="btn btn-secondary">Back to Portal</a>
        </div>
    </div>

    @if (Model.Notes.Any())
    {
        <div class="row">
            @foreach (var note in Model.Notes)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@note.Title</h5>
                            <p class="card-text text-muted small">
                                <i class="bi bi-calendar"></i> @note.CreatedAt.ToString("MMM dd, yyyy")
                            </p>
                            
                            @if (!string.IsNullOrEmpty(note.Content))
                            {
                                <p class="card-text">@(note.Content.Length > 150 ? note.Content.Substring(0, 150) + "..." : note.Content)</p>
                            }
                            
                            @if (note.Attachments.Any())
                            {
                                <p class="text-muted small">
                                    <i class="bi bi-paperclip"></i> @note.Attachments.Count attachment(s)
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-page="/Notes/View" asp-route-id="@note.Id" class="btn btn-sm btn-outline-primary">View</a>
                            <a asp-page="/Notes/Edit" asp-route-id="@note.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-page="/Notes/Delete" asp-route-id="@note.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-journal" style="font-size: 4rem; color: #ccc;"></i>
            <p class="text-muted mt-3">No notes yet. Create your first note to get started!</p>
            <a asp-page="/Notes/Create" asp-route-subjectId="@Model.Subject.Id" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create First Note
            </a>
        </div>
    }
</div>