@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Login"]</h1>

<style>
    /* border */
    form {
        border: 3px solid #f1f1f1;
    }
    /* input fields for username and password css*/
    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }
    /* style for login button */
    button {
        background-color: #04AA6D;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
    }
    /* different visual colour for red cancel button */
    .cancelbtn {
        width: auto;
        padding: 10px 18px;
        background-color: #f44336;
    }
    /* if avatar applicable (which will be soon) basic pfp then center */
    .imgcontainer {
        text-align: center;
        margin: 24px 0 12px 0;
    }
    /* avatar image */
    img.avatar {
        width: 40%;
        border-radius: 50%;
    }
    .container {
        padding: 16px;
    }
    /* forgot password when applicable */
    span.psw {
        float: right;
        padding-top: 16px;
    }

        .cancelbtn {
            width: 100%;
        }
</style>


<!-- form for logging in -->
<form action="action_page.php" method="post"> 
    <div class="container">
        <label for="uname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" name="uname" required>
        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" required>
        <button type="submit">Login</button>
        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
    </div>
    <div class="container" style="background-color:#f1f1f1">
        <p>At the current moment, you can not reset your password. Please, remember your password or store it in a safe and memorable area.</p>
    </div>
</form>
